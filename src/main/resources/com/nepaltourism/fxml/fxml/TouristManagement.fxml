<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nepaltourism.nepal_tourism3.controller.TouristController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label styleClass="page-title" text="Tourist Management">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleBackToDashboard" styleClass="search-btn" text="Back to Dashboard" />
         </children>
      </HBox>
      
      <HBox spacing="20.0">
         <children>
            <VBox spacing="15.0" styleClass="form-container" HBox.hgrow="NEVER">
               <children>
                  <Label styleClass="form-title" text="Tourist Information">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <GridPane hgap="10.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                     <children>
                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Nationality:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ComboBox fx:id="nationalityComboBox" maxWidth="1.7976931348623157E308" promptText="Select nationality" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="contactField" promptText="Phone number" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="emailField" promptText="Email address" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Emergency Contact:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="emergencyContactField" promptText="Emergency phone" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label text="Emergency Name:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="emergencyNameField" promptText="Emergency contact name" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <Label text="Passport:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <TextField fx:id="passportField" promptText="Passport number" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        
                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                        <TextArea fx:id="addressArea" prefRowCount="3" promptText="Full address" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                     </children>
                  </GridPane>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="addButton" onAction="#handleAddTourist" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" styleClass="primary-btn" text="Add Tourist" />
                        <Button fx:id="updateButton" onAction="#handleUpdateTourist" style="-fx-background-color: #2196F3; -fx-text-fill: white;" styleClass="secondary-btn" text="Update" />
                        <Button fx:id="deleteButton" onAction="#handleDeleteTourist" style="-fx-background-color: #f44336; -fx-text-fill: white;" styleClass="danger-btn" text="Delete" />
                        <Button fx:id="clearButton" onAction="#handleClearForm" style="-fx-background-color: #607D8B; -fx-text-fill: white;" styleClass="neutral-btn" text="Clear" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox spacing="10.0" styleClass="table-container" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="table-title" text="Registered Tourists">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <TableView fx:id="touristTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="nationalityColumn" prefWidth="120.0" text="Nationality" />
                        <TableColumn fx:id="contactColumn" prefWidth="130.0" text="Contact" />
                        <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                        <TableColumn fx:id="registrationColumn" prefWidth="120.0" text="Registration Date" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
