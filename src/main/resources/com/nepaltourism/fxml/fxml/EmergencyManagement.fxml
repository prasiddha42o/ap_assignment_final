<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nepaltourism.nepal_tourism3.controller.EmergencyManagementController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <!-- Header Section -->
    <HBox alignment="CENTER" spacing="10">

        <Label text="Emergency Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
    </HBox>

    <!-- Button Toggle Section -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Emergency Contacts" fx:id="contactsBtn" style="-fx-font-size: 14px; -fx-pref-width: 200; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#setupEmergencyContacts"/>
        <Button text="Report Emergency" fx:id="reportBtn" style="-fx-font-size: 14px; -fx-pref-width: 200; -fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#setupEmergencyReport"/>
    </HBox>

    <!-- Separator with styling -->
    <Separator style="-fx-background-color: #bdbdbd; -fx-padding: 5 0;"/>

    <!-- Dynamic Content Area -->
    <VBox fx:id="contentArea" spacing="15" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;">
        <!-- Default content - Emergency Contacts -->
        <Label text="Emergency Contacts" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>

        <VBox spacing="8" style="-fx-padding: 0 0 0 20;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="10" height="10" fill="#d32f2f" arcWidth="5" arcHeight="5"/>
                <Label text="Police: 100" style="-fx-font-size: 14px;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="10" height="10" fill="#d32f2f" arcWidth="5" arcHeight="5"/>
                <Label text="Tourist Police: +977-1-4247041" style="-fx-font-size: 14px;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="10" height="10" fill="#d32f2f" arcWidth="5" arcHeight="5"/>
                <Label text="Ambulance: 102" style="-fx-font-size: 14px;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="10" height="10" fill="#d32f2f" arcWidth="5" arcHeight="5"/>
                <Label text="Mountain Rescue: +977-1-4374625" style="-fx-font-size: 14px;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="10" height="10" fill="#d32f2f" arcWidth="5" arcHeight="5"/>
                <Label text="Hospital Contacts: View at reception" style="-fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Footer Section -->
    <Button text="Back to Dashboard" fx:id="backBtn" style="-fx-font-size: 14px; -fx-background-color: #757575; -fx-text-fill: white; -fx-background-radius: 5;"
            onAction="#handleBackToDashboard"/>
</VBox>